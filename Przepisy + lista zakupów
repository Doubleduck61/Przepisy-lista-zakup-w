x=0
moja_lista=[]
while x==0:
    print("Co chcsz zjeść na obiad?\n")
    print("[1] Makaron z kurczakiem i warzywami")
    print("[2] Makaron z tuńczykiem")
    print("[3] Pizza Capriciosa")
    print("[4] Jajecznicę")
    print("[5] Makaron z pesto")
    print("[6] Kurczak z ryżem po Chińsku")
    print("[7] Kotlety schabowe")
    print("[8] Ziemniaki z kwaśnym mlekiem")
    print("[9] Pizzę z tuńczykiem")
    print("[10] Jednak nic, pokaż moją listę zakupów")
    print("[11] Wyjście z programu!")
    print("[12] Dodaj pozycję do listy zakupów\n")
    wybor=int(input())
    if wybor == 1:
        print("[1] Makaron z kurczakiem i warzywami")
        lista1=["Makaron 300g","Pomidory x2","Papryka czerwona","Ząbek czosnku"]
        print("Potrzebujesz kupić:\n",lista1)
        print("Czy chcesz dodać te składniki do Twojej listy?[T/N]")
        decyzja=input()
        if decyzja == "T" or decyzja == "t":
            moja_lista.append(lista1)
            print("Powyższe składniki dodano do Twojej listy")
            yyy=input("Kliknij aby kontynuować...")
        else:
            print("Anulowano, powrót do głównego menu")
            x=0
    elif wybor == 2:
        print("[2] Makaron z tuńczykiem")
        lista2=["Makaron 400g","Pomidory x1","Puszka tuńczyka"]
        print("Potrzebujesz kupić:\n",lista2)
        print("Czy chcesz dodać te składniki do Twojej listy?[T/N]")
        decyzja=input()
        if decyzja == "T" or decyzja == "t":
            moja_lista.append(lista2)
            print("Powyższe składniki dodano do Twojej listy")
            yyy=input("Kliknij aby kontynuować...")
        else:
            print("Anulowano, powrót do głównego menu")
            x=0
    elif wybor == 3:
        print("[3] Pizza Capriciosa")
        lista3=["Spód do pizzy","Przecier pomidorowy mały","Szynka","Pieczarki","Kukurydza"]
        print("Potrzebujesz kupić:\n",lista3)
        print("Czy chcesz dodać te składniki do Twojej listy?[T/N]")
        decyzja=input()
        if decyzja == "T" or decyzja == "t":
            moja_lista.append(lista3)
            print("Powyższe składniki dodano do Twojej listy")
            yyy=input("Kliknij aby kontynuować...")
        else:
            print("Anulowano, powrót do głównego menu")
            x=0
    elif wybor == 4:
        print("[4] Jajecznicę")
    elif wybor == 5:
        print("[5] Makaron z pesto")
    elif wybor == 6:
        print("[6] Kurczak z ryżem po Chińsku")
    elif wybor == 7:
        print("[7] Kotlety schabowe")
    elif wybor == 8:
        print("[8] Ziemniaki z kwaśnym mlekiem")
    elif wybor == 9:
        print("[9] Pizzę z tuńczykiem")
    elif wybor == 10:
        print("[10] Lista zakupów")
        print("Oto Twoja lista zakupów:\n",moja_lista)
    elif wybor == 11:
        print("Wyjście z programu!")
        yyy=input("Kliknij aby kontynuować...")
        x=1
    elif wybor == 12:
        print("[12] Dodaj pozycje na listę zakupów")
        produkt=input()
        dod=[produkt]
        moja_lista.append(dod)
        print("Produkt dodano do Twojej listy")
        yyy=input("Kliknij aby kontynuować...")
        x=0
