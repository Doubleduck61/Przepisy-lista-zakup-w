    elif wybor == 13:
        print("[13] Wyszukiwarka")
        print("Podaj piersze słowo dania które chcesz wyszukać:")
        word=input()
        z=0
        p=len(dania)
        while z<p:
            wysz_jedz=(dania[z].startswith(word))
            #print(dania[z].startswith(word))
            if wysz_jedz==True:
                print("["+str(z+1)+"]",dania[z])
            z+=1
        yyy=input("Kliknij aby kontynuować...")
        x=0
